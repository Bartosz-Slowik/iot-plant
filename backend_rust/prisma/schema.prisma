generator client {
  provider = "cargo prisma"
  output   = "../src/db.rs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  esp_id  String   @id @default(uuid())
  wetness Int?
  red     BigInt?  @default(0)
  green   BigInt?  @default(0)
  blue    BigInt?  @default(0)
  name    String?  @db.VarChar
  trigger Int?
  Plants  Plants[]
}

model Plants {
  plant_id  String  @id @default(uuid())
  user_id   String
  device_id String?
  Device    Device? @relation(fields: [device_id], references: [esp_id], onDelete: NoAction, onUpdate: NoAction, map: "Plants_Esps_esp_id_fk")
  Users     Users   @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction, map: "Plants_Users_user_id_fk")
}

model Roles {
  role_id String  @id @default(uuid())
  role    String? @db.VarChar
  Users   Users[]
}

model Users {
  user_id  String  @id @default(uuid())
  email    String  @db.VarChar(255)
  password String  @db.VarChar(255)
  name     String? @db.VarChar(255)
  surname  String? @db.VarChar(255)
  role_id  String  @default(uuid())
  Plants   Plants[]
  Roles    Roles   @relation(fields: [role_id], references: [role_id], onDelete: NoAction, onUpdate: NoAction, map: "role_id")
}
